{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "checkJs": true,
    "experimentalDecorators": true,
    
    "moduleResolution": "node",
    "types": [
      "node",
      "jest",
      "express"
    ],
  },
  "exclude": [
    "node_modules",
    "./jest.config.js",
    "./build/*"
  ]
}